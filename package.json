      "icono.ico"
    ],
    "asar": false,
    "win": {
      "target": "portable",
      "icon": "icono.ico"
    }
  },
  "dependencies": {
    "express": "^4.18.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  }
}
