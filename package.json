{
  "name": "electron-gym",
  "version": "1.0.0",
  "description": "Sistema de gesti√≥n de gimnasio",
  "author": "VITE SOFTWARE",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.vitesoftware.gym",
    "productName": "PowerGYM",
    "directories": {
